<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView2"
            android:padding="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circular"
            app:strokeWidth="3dp"/>

        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muhammad Ilham"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:textSize="12sp"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KiRaRyuuKi"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>

        <Button
            android:id="@+id/button7"
            android:background="@drawable/baseline_message"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button5"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/button5"
            android:background="@drawable/baseline_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promo Bulan Ini!"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="November Berhadiah"/>

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right"
                android:flipInterval="5000" android:autoStart="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageContentFirst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/content_1"
                    app:shapeAppearanceOverlay="@style/rounded"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageContentSecond"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/content_2"
                    app:shapeAppearanceOverlay="@style/rounded"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageContentThird"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/content_3"
                    app:shapeAppearanceOverlay="@style/rounded"/>

            </ViewFlipper>

            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/textView"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:textSize="12dp"
                        android:textColor="@color/accentsThrid"
                        android:id="@+id/button"
                        android:background="@drawable/button_gradient_color"
                        android:layout_width="115dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Lihat Semua"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"/>

                    <Button
                        android:textSize="12dp"
                        android:id="@+id/button2"
                        android:background="@drawable/button_white_color"
                        android:layout_width="115dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Mobil Family"
                        android:layout_weight="1"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:layout_marginStart="15dp"/>

                    <Button
                        android:textSize="12dp"
                        android:id="@+id/button3"
                        android:background="@drawable/button_white_color"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Mobil Business"
                        android:layout_weight="1"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:layout_marginStart="15dp"/>

                    <Button
                        android:textSize="12dp"
                        android:id="@+id/button4"
                        android:background="@drawable/button_white_color"
                        android:layout_width="115dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Mobil Sport"
                        android:layout_weight="1"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:layout_marginStart="15dp"/>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lanjut Mencari"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>